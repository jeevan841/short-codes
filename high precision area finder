//decimal specified area finder for circle 

<c>
#include <iostream>
#include <iomanip>
#include <cmath>

int main() {
    double radius;
    int n;

    // Prompt for user input
    std::cout << "Enter the radius of the circle: ";
    std::cin >> radius;

    std::cout << "Enter the number of decimal points for the area: ";
    std::cin >> n;

    // Calculate the area using the formula: Area = PI * r^2
    const double PI = 3.14159265358979323846; // A high-precision value for PI
    double area = PI * pow(radius, 2);

    // Set the output precision and print the result
    std::cout << std::fixed << std::setprecision(n) << "The area of the circle is: " << area << std::endl;

    return 0;
}
